doctype html
html
  head
    title Task List
    link(rel="stylesheet" href="/styles.css")
  body
    .container
      h1 Task List

      if error === 'empty'
        p.error Cannot submit an empty task!

      // ADD TASK FORM
      form(action="/add" method="POST" class="add-form")
        input(type="text" name="task" placeholder="New task" required)
        button(type="submit") Add Task

      ul
        each task in tasks
          li(class=task.completed ? "completed" : "")
            .task-text= task.task

            if !task.completed
              // COMPLETE BUTTON
              form(action=`/complete/${task.id}` method="POST")
                button.complete-btn(type="submit") Complete

            // EDIT FORM
            form(action=`/edit/${task.id}` method="POST" class="edit-form")
              input(type="text" name="task" value=task.task required)
              button.edit-btn(type="submit") Save

            // DELETE
            form(action=`/delete/${task.id}` method="POST")
              button.delete-btn(type="submit") Delete
